<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="content">Content</label>
      <input id="content" name="content" />
    </div>
    <button type="submit" class="new-btn">+ New Post</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Edit Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-content">Update Post</a>
      <a  data-id="{{post.id}}" class="delete-post-btn">Delete Post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/js/new-post.js"></script>
<script src="/js/delete-post.js"></script>